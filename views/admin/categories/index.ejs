<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container" style="top:60px; position:relative;">
    <hr>
    <h2>Categories</h2>
    <a class="btn btn-success" href="/admin/categories/new" >New Category</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th style="width: 166px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category =>{ %>
            <tr>
                <th><%= category.id%></th>
                <th><%= category.title%></th>
                <th><%= category.slug%></th>
                <th>
                    <a href="/admin/categories/edit/<%=category.id%>" class="btn btn-warning">Edit</a>
                    <form method="POST" action="/categories/delete" style="display: inline-block" onsubmit="submit_confirm(event, this)">
                        <input type="hidden" name="id" value="<%= category.id %>" >
                        <button class="btn btn-danger" >Delete</button>
                    </form>
                </th>   
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function submit_confirm(event, form){
        event.preventDefault();
        let decision = confirm("Do you want to delete?");
        if(decision){
            form.submit();
        }
    }
</script>
