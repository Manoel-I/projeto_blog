<div class="container" style="top:60px; position:relative;">
    <div class="card">
        <div class="card-header">
            <h2 style="position:relative;">Article Registration:</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <input class="form-control form-control-lg" type="text" name="title" placeholder="Article name:">
                <br>
                <textarea class="form-control" name="body" id="body" placeholder="Write your article here!"></textarea>
                <br>
                <button class="btn btn-success" style="left: 40%; position: relative;" data-toggle="modal" data-target="#exampleModal">Register</button>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.tiny.cloud/1/xglrvpd3r0bnvnm97v5tgio0ctm5xoadx9o9fgdgcatkxmkd/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    
    tinymce.init({
      selector: '#body',
      height : '300px',
      //language : 'pt_BR' ,
      plugins:[
        'advlist',
        'autolink',
        'autosave',
        'code',
        'codesample',
        'emoticons',
        'fullscreen',
        'help',     
        'image',
        'importcss',
        'insertdatetime',
        'link',
        'lists',
        'media',
        'nonbreaking',
        'pagebreak',
        'preview',
        'searchreplace',
        'table',
        'advtemplate',
        'visualblocks',
        'visualchars',
        'wordcount'
      ],
      toolbar: 'undo redo | formatselect | bold italic underline strikethrough | alignleft aligncenter alignright alignjustify | numlist bullist | outdent indent | link image media | codesample | forecolor backcolor | removeformat | fullscreen',
      toolbar_mode: 'floating',
    });
</script>



