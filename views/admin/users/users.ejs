<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container" style="top:60px; position:relative;">
    <hr>
    <h2>Users</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th style="width: 166px;">Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(users =>{ %>
            <tr>
                <th><%= users.id%></th>
                <th><%= users.email%></th>
                <th>
                    <form method="POST" action="/user/delete" style="display: inline-block" onsubmit="submit_confirm(event, this)">
                        <input type="hidden" name="id" value="<%= users.id %>" >
                        <button class="btn btn-danger" >Delete</button>
                    </form>
                </th>   
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function submit_confirm(event, form){
        event.preventDefault();
        let decision = confirm("Do you want to delete?");
        if(decision){
            form.submit();
        }
    }
</script>
