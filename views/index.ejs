<body>
    <div class="jumbotron text-center" style="top:50px; position: relative;">
        <h1 class="display-4">Welcome!</h1>
        <p class="lead">Explore a world of diverse articles</p>
        <hr class="my-4">
        <p>Discover insightful content on a wide range of topics.</p>
        <p class="lead">
        
        </p>
    </div>
    <br>
    <br>
    <div class="container" style="width: 1000px">
        <hr>
        <% article.forEach(article =>{ %>
            <div class="card">
                <div class="card-header ">
                    <h3><%= article.title%></h3>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <a href="/<%= article.slug %>" class="btn btn-success "> Read Article</a>
                </div>
            </div>
            <br>
        <%})%>
    </div>
</body>
